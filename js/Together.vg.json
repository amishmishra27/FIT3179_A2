{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "../data/disaster_cost2.csv"
  },
  "padding": { "left": 0, "right": 0, "top": 0, "bottom": 0},

  "vconcat": [
    {
      "width": 500,
      "height": 500,
      "projection": {"type": "mercator"},
      "layer": [
        {
          "data": {
            "url": "aus_boundaries.topojson",
            "format": {
              "type": "topojson",
              "feature": "STE_2021_AUST_GDA2020"
            }
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "aus_boundaries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [{"filter": {"param": "time_brush"}}],
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "size": {
                "field": "Fatalities",
                "type": "quantitative",
                "title": ["Deaths"],
                "scale": {"range": [100,2000]}
            },
            "color": {
              "field": "Injured",
              "type": "quantitative",
              "title": "Injured",
              "scale": {
                "type": "quantize",
                "domain": [0,1000],
                "scheme": "reds"
              }
            },
          "tooltip": [
            {"field": "Event", "type": "nominal", "title": "Event"},
            {"field": "Region", "type": "nominal", "title": "Region"},
            {"field": "Category", "type": "nominal", "title": "Category"},
            {"field": "Start_Date", "type": "temporal", "title": "Start Date"},
            {"field": "End_Date", "type": "temporal", "title": "End Date"},
            {"field": "Injured", "type": "quantitative", "title": "Injured", "format": ",.0f"},
            {"field": "Fatalities", "type": "quantitative", "title": "Deaths", "format": ",.0f"}

          ]
        },
        "layer": [
          {"mark": {"type": "circle", "opacity": 0.87}}
        ]
        }
      ]
    },
    {
      "width": 500,
      "height": 60,
      "mark": "line",
      "title": "Use this line chart to filter out Events based on time",
      "params": [
        {
          "name": "time_brush",
          "select": {
            "type": "interval",
            "encodings": ["x"]
          }
        }
      ],
      "encoding": {
        "x":{
          "field": "End_Date",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Count"
        }
      }
    }
  ]
}