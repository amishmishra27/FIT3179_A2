{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_A2/refs/heads/main/data/disaster_cost2.csv"
  },

  "vconcat": [
    {
      "title": "Geographic Distribution and Impact of Natural Disasters",
      "width": 736,
      "height": 500,
      "projection": {"type": "mercator"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_A2/refs/heads/main/js/aus_boundaries.topojson",
            "format": {
              "type": "topojson",
              "feature": "STE_2021_AUST_GDA2020"
            }
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_A2/refs/heads/main/js/aus_boundaries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [{"filter": {"param": "time_brush"}}],
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "size": {
                "field": "Fatalities",
                "type": "quantitative",
                "title": ["Deaths"],
                "scale": {"domain": [0,50,100,150,200], "range": [120,500,1000,1500,2000]}
            },
            "color": {
              "field": "Injured",
              "type": "quantitative",
              "title": "Injured",
              "scale": {
                "type": "threshold",
                "domain": [10,50,100,500,2000,5000],
                "scheme": "reds"
              }
            },
          "tooltip": [
            {"field": "Event", "type": "nominal", "title": "Event"},
            {"field": "Region", "type": "nominal", "title": "Region"},
            {"field": "Category", "type": "nominal", "title": "Category"},
            {"field": "Start_Date", "type": "temporal", "title": "Start Date"},
            {"field": "End_Date", "type": "temporal", "title": "End Date"},
            {"field": "Injured", "type": "quantitative", "title": "Injured", "format": ",.0f"},
            {"field": "Fatalities", "type": "quantitative", "title": "Deaths", "format": ",.0f"}

          ]
        },
        "layer": [
          {"mark": {"type": "circle", "opacity": 0.89, "stroke": "black", "strokeWidth": 0.8, "strokeOpacity": 0.3}}
        ]
        }
      ]
    },
    {
      "width": 736,
      "height": 80,
      "mark": "line",
      "title": "Use this line chart to filter Disasters based on time-period",
      "params": [
        {
          "name": "time_brush",
          "select": {
            "type": "interval",
            "encodings": ["x"]
          }
        }
      ],
      "encoding": {
        "x":{
          "field": "End_Date",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Events"
        }
      }
    }
  ]
}