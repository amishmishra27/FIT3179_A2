{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_A2/refs/heads/main/data/disaster_cost.csv"
  },
  "padding": { "left": 0, "right": 0, "top": 0, "bottom": 0},

  "vconcat": [
    {
      "width": 500,
      "height": 450,
      "projection": {"type": "mercator"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_A2/refs/heads/main/js/aus_boundaries.topojson",
            "format": {
              "type": "topojson",
              "feature": "STE_2021_AUST_GDA2020"
            }
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_A2/refs/heads/main/js/aus_boundaries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [{"filter": {"param": "time_brush"}}],
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "size": {
                "field": "Insured_Cost",
                "type": "quantitative",
                "title": ["Cost of Damage", "($10,000)"],
                "scale": {"domain": [0,10000,50000,100000,200000], "range": [100,200,500,800]}
            },
          "tooltip": [
            {"field": "Event", "type": "nominal", "title": "Event"},
            {"field": "Region", "type": "nominal", "title": "Region"},
            {"field": "Category", "type": "nominal", "title": "Category"},
            {"field": "Start_Date", "type": "temporal", "title": "Start Date"},
            {"field": "End_Date", "type": "temporal", "title": "End Date"},
            {"field": "Insured_Cost", "type": "quantitative", "title": "Cost of Damage", "format": ",.0f"}
          ]
        },
        "layer": [
          {"mark": {"type": "circle", "opacity": 0.80, "stroke": "black", "strokeWidth": 0.8, "strokeOpacity": 0.3, "color": "#fb6a4a"}}
        ]
        }
      ]
    },
    {
      "width": 500,
      "height": 80,
      "mark": "line",
      "title": "Use this line chart to filter Disasters based on time-period",
      "params": [
        {
          "name": "time_brush",
          "select": {
            "type": "interval",
            "encodings": ["x"]
          }
        }
      ],
      "encoding": {
        "x":{
          "field": "End_Date",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Events"
        }
      }
    }
  ]
}